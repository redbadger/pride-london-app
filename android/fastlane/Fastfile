fastlane_version "2.78.0"

default_platform :android

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Build application"
  lane :build do
    gradle(
      task: 'assemble',
      build_type: 'Release'
    )
  end

  desc "Deploy Alpha"
  lane :alpha do
    gradle(
      task: 'assemble',
      build_type: 'Release'
    )

    # Push to Hockey
    hockey(
      api_token: hockey_api_token,
      apk: 
      notes: release_notes,
    )
  end

  desc "Deploy Beta"
  lane :beta do
    gradle(
      task: 'assemble',
      build_type: 'Release'
    )
  end
end